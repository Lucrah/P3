        <Grid HorizontalAlignment="Left" Height="113.214" Margin="10,0.098,0,0" VerticalAlignment="Top" Width="549" Background="#FF005430" Grid.Row="3" Grid.RowSpan="2">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="62,0,0,0" Height="30" Width="389" FontSize="21.333"><Run Text="                         "/><Run Language="da-dk" Text="Pris"/></TextBlock>
            <RadioButton Content="Solgt" HorizontalAlignment="Left" Margin="437.216,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.971,0.619"/>
