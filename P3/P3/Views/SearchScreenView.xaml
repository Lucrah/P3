        <Grid HorizontalAlignment="Left" Height="113.214" Margin="10,0,0,0" VerticalAlignment="Top" Width="549" Background="#FF005430" Grid.Row="7">
        	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="62,0,0,0" Height="30" Width="389" FontSize="21.333"><Run Text="                         "/><Run Language="da-dk" Text="Liggetid"/><LineBreak/><Run Language="da-dk"/></TextBlock>
        </Grid>
        <Button Content="Søg" HorizontalAlignment="Left" Margin="424,66.09,0,0" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="135" Height="41.91" FontSize="24"/>
        <Grid HorizontalAlignment="Left" Height="113.214" Margin="10,0,0,0" VerticalAlignment="Top" Width="549" Background="#FF005430" Grid.Row="9">
        	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="62,0,0,0" Height="30" Width="389" FontSize="21.333"><Run Text="                         "/><Run Language="da-dk" Text="Diverse"/></TextBlock>
        </Grid>
